---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '@/components/BaseHead.astro';
import Footer from '@/components/Footer.astro';
import FormattedDate from '@/components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '@/consts';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex min-h-screen flex-col">
    <main class="mx-auto w-full max-w-[720px] grow px-4 py-12">
      <h1 class="mb-4 text-center text-2xl font-bold tracking-wider text-gray-800">Articles</h1>
      <section>
        <ul class="flex flex-col gap-4">
          {
            posts.map((post) => (
              <li class="border-b border-gray-100 pb-4 last:border-0">
                <a
                  href={`/blog/${post.id}/`}
                  class="group flex flex-row items-center justify-between gap-4 no-underline"
                >
                  <div class="flex flex-col gap-0.5">
                    <div class="flex items-center gap-3">
                      <p class="text-md m-0 font-mono font-bold text-gray-700">
                        <FormattedDate date={post.data.pubDate} />
                      </p>
                      <h4 class="m-0 line-clamp-1 text-sm font-bold text-gray-700 transition-colors group-hover:text-sky-500">
                        {post.data.title}
                      </h4>
                    </div>
                    <p class="line-clamp-2 text-sm leading-relaxed text-gray-500">
                      {post.data.description}
                    </p>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="mt-1 flex gap-2">
                        {post.data.tags.map((tag) => (
                          <span class="rounded bg-gray-100 px-1.5 py-0.5 text-[10px] text-gray-500">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                  {post.data.heroImage && (
                    <Image
                      width={140}
                      height={80}
                      src={post.data.heroImage}
                      alt=""
                      class="h-[80px] w-[140px] shrink-0 rounded object-cover shadow-sm transition-transform group-hover:scale-105"
                    />
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
