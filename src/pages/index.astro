---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import profileImage from '../assets/profile.jpg';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex min-h-screen flex-col">
    <main class="mx-auto flex w-full max-w-[960px] grow flex-col items-center justify-center p-4">
      <h1 class="mb-8 text-3xl font-bold text-gray-400">
        (<span class="text-sky-300">q</span>w<span class="text-sky-300">q</span>)<span
          class="text-orange-300">b</span
        >
      </h1>
      <div class="mb-4 flex flex-col items-center text-center text-gray-700">
        <Image
          src={profileImage}
          alt="intn"
          width={100}
          height={100}
          class="mb-4 rounded-full shadow-md"
        />
        <p class="mb-2">intn</p>
        <p>Software Engineer</p>
        <p>Nagano / Japan</p>
      </div>

      <hr class="my-8 h-px w-64 border-0 bg-gray-200" />

      <section class="w-full max-w-md">
        <p class="mb-4 text-center text-xl font-bold text-gray-800">Latest Posts</p>
        <ul class="list-none p-0">
          {
            posts.map((post) => (
              <li class="mb-3 flex items-baseline justify-between rounded border-b border-gray-100 px-2 pb-2 transition-colors last:border-0 hover:bg-gray-50">
                <a
                  href={`/blog/${post.id}/`}
                  class="font-medium text-blue-600 visited:text-purple-700 hover:underline"
                >
                  {post.data.title}
                </a>
                <div class="ml-4 flex-none font-mono text-sm text-gray-500">
                  <FormattedDate date={post.data.pubDate} />
                </div>
              </li>
            ))
          }
        </ul>
        <p class="mt-6 text-center">
          <a href="/blog" class="text-sm text-gray-500 transition-colors hover:text-gray-900"
            >すべての記事を見る →</a
          >
        </p>
      </section>
    </main>
    <Footer />
  </body>
</html>
