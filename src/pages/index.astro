---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';
import profileImage from '../assets/profile.jpg';
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex min-h-screen flex-col">
    <main
      class="mx-auto flex w-full max-w-[960px] grow flex-col items-center justify-center gap-8 p-4"
    >
      <h1
        class="flex min-h-[1.5em] items-center text-3xl font-bold tracking-wide text-gray-400"
        aria-label="qwqb"
      >
        <span id="typewriter"></span>
        <span class="animate-cursor ml-1 inline-block h-6 w-3 bg-gray-400 align-middle"></span>
      </h1>

      <div class="flex flex-col items-center text-center text-gray-700">
        <Image
          src={profileImage}
          alt="intn"
          width={200}
          height={200}
          class="mb-4 size-[100px] rounded-full"
          loading="eager"
          fetchpriority="high"
        />
        <p class="mb-2">intn</p>
        <p>Software Engineer</p>
        <p>Nagano / Japan</p>
      </div>

      <div class="flex gap-4">
        <a
          href="https://github.com/qwq-net"
          target="_blank"
          aria-label="GitHub"
          class="text-gray-500 transition-colors hover:text-gray-900"
        >
          <Icon name="simple-icons:github" class="size-5" />
        </a>

        <a
          href="https://x.com/qwqnet"
          target="_blank"
          aria-label="X (Twitter)"
          class="text-gray-500 transition-colors hover:text-gray-900"
        >
          <Icon name="simple-icons:x" class="size-5" />
        </a>

        <a
          href="https://www.pixiv.net/users/88873654"
          target="_blank"
          aria-label="Pixiv"
          class="text-gray-500 transition-colors hover:text-gray-900"
        >
          <Icon name="simple-icons:pixiv" class="size-5" />
        </a>

        <a
          href="https://steamcommunity.com/id/qwqnet/"
          target="_blank"
          aria-label="Steam"
          class="text-gray-500 transition-colors hover:text-gray-900"
        >
          <Icon name="simple-icons:steam" class="size-5" />
        </a>

        <div class="group relative flex items-center justify-center">
          <button
            type="button"
            class="cursor-pointer text-gray-500 transition-colors hover:text-gray-900"
            aria-label="Discord"
          >
            <Icon name="simple-icons:discord" class="size-5" />
          </button>
          <span
            class="pointer-events-none absolute -top-8 left-1/2 min-w-max -translate-x-1/2 rounded bg-gray-800 px-2 py-1 text-xs text-white opacity-0 shadow transition-opacity group-hover:opacity-100 dark:bg-gray-100 dark:text-gray-900"
          >
            ask me
          </span>
        </div>
      </div>

      <hr class="h-px w-64 border-0 bg-gray-200" />

      <section class="w-full max-w-md">
        <p class="mb-4 text-center text-xl font-bold text-gray-800">Latest Posts</p>
        <ul class="list-none p-0">
          {
            posts.map((post) => (
              <li class="mb-3 flex items-baseline justify-between rounded border-b border-gray-100 px-2 pb-2 transition-colors last:border-0 hover:bg-gray-50">
                <a
                  href={`/blog/${post.id}/`}
                  class="font-medium text-blue-600 visited:text-purple-700 hover:underline"
                >
                  {post.data.title}
                </a>
                <div class="ml-4 flex-none font-mono text-sm text-gray-500">
                  <FormattedDate date={post.data.pubDate} />
                </div>
              </li>
            ))
          }
        </ul>
        <p class="mt-6 text-center">
          <a href="/blog" class="text-sm text-gray-500 transition-colors hover:text-gray-900"
            >すべての記事を見る →</a
          >
        </p>
      </section>
    </main>
    <Footer />
  </body>
</html>

<script>
  const textData = [
    { char: 'q', class: 'text-sky-300' },
    { char: 'w', class: 'text-gray-400' },
    { char: 'q', class: 'text-sky-300' },
    { char: 'b', class: 'text-orange-300' },
  ];

  const container = document.getElementById('typewriter');

  if (container) {
    let i = 0;
    const type = () => {
      if (i < textData.length) {
        const span = document.createElement('span');
        span.textContent = textData[i].char;
        span.className = textData[i].class;
        container.appendChild(span);
        i++;
        setTimeout(type, 150 + Math.random() * 100);
      }
    };
    // 少し待ってから開始
    setTimeout(type, 800);
  }
</script>
